{
  "compilerOptions": {
    "strict": true,
    "target": "es2021",
    "moduleResolution": "node",
    "declaration": true,

     "noUnusedLocals": false,
     "noUnusedParameters": false,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,

    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    "lib": [ "es2021", "dom" ],

    "module": "ESNext"
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "filesGlob": [
    "./**/*.ts"
  ]
}
